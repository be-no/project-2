<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Index</title>
</head>
<body>
    <h1>Vietnamese Favorites</h1>
    <nav>
        <a href="/vietfood/new">ADD A DISH</a>
    </nav>
    <ul class="container">
        <% vietfood.forEach(dish=> { %>
            <li>
                <a href="/vietfood/<%= dish._id %>">
                    <%= dish.name; %>
                </a>
                <form action="/vietfood/<%= dish._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="REMOVE"/>
                </form>
                <a href="/vietfood/<%=dish._id %>/edit">EDIT DISH</a>
                <h6></h6>
            </li>
        <% }) %>
    </ul>
</body>
</html>